---
import Layout from "../../layouts/Layout.astro";


const works = [
    {
        id: 1,
        title: "癒しサロンSmile コーポレートサイト",
        thumbnail: "../../assets/images/top/work01.png",
        description: "Webサイトリニューアル。スマートフォン対応と管理のしやすさを重視したAstroサイトを制作しました。",
        tags: ["Astro", "JavaScript", "SCSS"],
        category: "コーポレートサイト",
        client: "癒しサロンSmile",
        url: "https://smile104.net/"
    },
    {
        id: 2,
        title: "アニメーション重視のポートフォリオサイト",
        thumbnail: "../../assets/images/top/work02.png",
        description: "ポートフォリオサイトを制作。アニメーションと動きのある表現で魅力的なページに仕上げました。",
        tags: ["Next.js", "TypeScript", "Tailwind CSS"],
        category: "ポートフォリオサイト",
        client: "ポートフォリオサイト",
        url: "https://ozakikoki.com/"
    }
];
---

<Layout
    pageId='work' 
    title='制作実績一覧' 
    description='制作実績の一覧ページです'
>
    <section class="work-page">
        <div class="page-kv">
            <div class="page-kv__wrap">
                <div>
                    <h2>制作実績</h2>
                    <p class="page-kv__text">
                        これまで制作したWebサイトです。<br>
                        「Web制作やデザインを頼みたい」「既存のWebサイトを修正・改善したい」など是非、お気軽にご相談ください。
                    </p>
                </div>
                <h3 class="fp">WORK</h3>
            </div>
        </div>
        <div class="l-inner">
            <div class="work__grid">
                {works.map((work) => (
                    <article class="work__card">
                        <a href={work.url} class="work__link" target="_blank" rel="noopener noreferrer">
                            <div class="work__thumbnail">
                                <img 
                                    src={work.thumbnail} 
                                    alt={work.title}
                                    width={800}
                                    height={450}
                                />
                            </div>
                            <div class="work__content">
                                <div class="work__header">
                                    <h2 class="work__title">{work.title}</h2>
                                    <p class="work__client">{work.client}</p>
                                </div>
                                <p class="work__description">{work.description}</p>
                                <div class="work__tags">
                                    {work.tags.map((tag) => (
                                        <span class="work__tag">{tag}</span>
                                    ))}
                                </div>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style lang="scss">
/* Works Section */

.work-page {
    padding: 8rem 0;
}
.work {
    background: #000;
    color: #fff;

    &__grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 4rem;
        margin-bottom: 4rem;
    }
    
    &__card {
        background-color: #000;
        box-shadow: 0 0 0 3px #000;
        border: 2px solid #fff;
        border-radius: 5px;
        overflow: hidden;
        transition: all 0.3s ease;
        
        &:hover {
            .work__thumbnail img {
                transform: scale(1.03);
            }
            .work__title {
                color: #dcb434;
            }
        }
    }

    &__link {
        text-decoration: none;
        color: inherit;
        display: block;
    }
    
    &__thumbnail {
        position: relative;
        overflow: hidden;
        aspect-ratio: 16/9;
        
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
    }
    
    &__content {
        padding: 2rem;
    }
    
    &__title {
        font-size: 1.8rem;
        font-weight: 600;
        line-height: 1.4;
        transition: color 0.3s ease;
        color: #dcb434;
    }
    
    &__description {
        font-size: 1.4rem;
        color: #fff;
        margin-bottom: 1.5rem;
    }
    
    &__tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }
    
    &__tag {
        font-size: 1.3rem;
        letter-spacing: 0.05em;
        color: #fff;
        border: 1px solid #fff;
        padding: 0 0.75rem;
    }

    &__more {
        text-align: center;
        margin-top: 4rem;

        .btn-A {
            display: inline-block;
            background: #000;
            box-shadow: 0 0 0 3px #000;
            border: 2px solid #fff;
            border-radius: 5px;
            padding: 1.5rem 4rem;
            transition: all 0.3s ease;
            position: relative;

            &::before {
                content: '▶';
                position: absolute;
                left: 1.5rem;
                color: #dcb434;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            &:hover {
                border-color: #dcb434;

                &::before {
                    opacity: 1;
                }

                .text {
                    color: #dcb434;
                }
            }

            .text {
                color: #fff;
                font-size: 1.6rem;
                text-decoration: none;
                padding-left: 1rem;
                transition: color 0.3s ease;
            }
        }
    }
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .work {
        &__grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        &__title {
            font-size: 1.6rem;
        }

        &__description {
            font-size: 1.2rem;
        }

        &__tag {
            font-size: 1.1rem;
        }

        &__more {
            .btn-A {
                width: 100%;
                padding: 1.2rem;

                .text {
                    font-size: 1.4rem;
                }
            }
        }
    }
}
</style>