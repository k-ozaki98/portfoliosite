---
import Layout from "../../layouts/Layout.astro";


const works = [
    {
        id: 1,
        title: "癒しサロンSmile コーポレートサイト",
        thumbnail: "../../assets/images/top/work01.png",
        description: "Webサイトリニューアル。スマートフォン対応と管理のしやすさを重視したAstroサイトを制作しました。",
        tags: ["Astro", "JavaScript", "SCSS"],
        category: "コーポレートサイト",
        client: "癒しサロンSmile",
        url: "https://smile104.net/"
    },
    {
        id: 2,
        title: "アニメーション重視のポートフォリオサイト",
        thumbnail: "../../assets/images/top/work02.png",
        description: "ポートフォリオサイトを制作。アニメーションと動きのある表現で魅力的なページに仕上げました。",
        tags: ["Next.js", "TypeScript", "Tailwind CSS"],
        category: "ポートフォリオサイト",
        client: "ポートフォリオサイト",
        url: "https://ozakikoki.com/"
    }
];
---

<Layout
    pageId='work' 
    title='制作実績一覧' 
    description='制作実績の一覧ページです'
>
    <section class="work-page">
        <div class="l-inner">
            <h1 class="page-title p-ttl">Work</h1>
            <div class="work__grid">
                {works.map((work) => (
                    <article class="work__card">
                        <a href={work.url} class="work__link" target="_blank" rel="noopener noreferrer">
                            <div class="work__thumbnail">
                                <img 
                                    src={work.thumbnail} 
                                    alt={work.title}
                                    width={800}
                                    height={450}
                                />
                            </div>
                            <div class="work__content">
                                <div class="work__header">
                                    <h2 class="work__title">{work.title}</h2>
                                    <p class="work__client">{work.client}</p>
                                </div>
                                <p class="work__description">{work.description}</p>
                                <div class="work__tags">
                                    {work.tags.map((tag) => (
                                        <span class="work__tag">{tag}</span>
                                    ))}
                                </div>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style lang="scss">
.work-page {
    padding: 8rem 0;
    background: #f8f9fa;

    .work__grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .work__card {
        overflow: hidden;
        transition: all 0.3s ease;

        &:hover {

            .work__thumbnail img {
                transform: scale(1.03);
            }
            .work__title {
              color: var(--color-primary);
            }
        }
    }

    .work__link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .work__thumbnail {
        position: relative;
        overflow: hidden;
        aspect-ratio: 16/9;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
    }

    .work__content {
        padding: 2rem;
    }

    .work__header {
        margin-bottom: 1.5rem;
    }

    .work__category {
        display: inline-block;
        font-size: 1.3rem;
        color: var(--color-primary);
        margin-bottom: 0.5rem;
    }

    .work__title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        line-height: 1.4;
    }

    .work__client {
        font-size: 1.4rem;
        color: #666;
    }

    .work__description {
        font-size: 1.4rem;
        line-height: 1.7;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .work__tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .work__tag {
        font-size: 1.3rem;
        letter-spacing: 0.05em;
        color: #666;
        border: 1px solid #999;
        padding: 0 0.75rem;
        color: #999;
    }
}

@media (max-width: 768px) {
    .work-page {
        padding: 4rem 0;

        .work__grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .work__title {
            font-size: 1.8rem;
        }

        .work__description {
            font-size: 1.3rem;
        }
    }
}
</style>