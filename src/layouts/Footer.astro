---
interface Props {
    pageId?: string;
}

const {pageId} = Astro.props;

const footerMenu = [
    { label: 'はじめから', path: '/' },
    { label: 'ぷろふぃーる', path: '/profile' },
    { label: 'ぶろぐ', path: '/blog' },
    { label: 'じっせき', path: '/work' },
    { label: 'れんらく', path: '/contact' }
];
---

<footer class="footer">
    <div class="footer__menu-container dq-window">
        <nav class="footer__nav l-inner">
            <ul class="footer__menu">
                {footerMenu.map((item) => (
                    <li class="footer__menu-item">
                        <a 
                            href={item.path}
                            class="footer__menu-link sound-btn"
                        >
                            <span class="dq-cursor">▶</span>
                            {item.label}
                        </a>
                    </li>
                ))}
            </ul>
        </nav>
    </div>
    <div class="footer__copyright-container">
        <p class="footer__copyright l-inner">
            <span class="pixel-text">&copy; 2025 こーき の ぽーとふぉりお</span>
        </p>
    </div>
</footer>

<style lang="scss">
    .footer {
        font-family: "PixelMplus12", monospace;
        
        &__menu-container {
            background: #000;
            width: 100%;
            padding: 2rem 0;
            margin-bottom: 2px; // コピーライトとの間隔
        }

        &__copyright-container {
            // background: #000;
            width: 100%;
            padding: 1.5rem 0;
            background: url(../assets/images/common/footer-bg.png);
            background-size: contain;
            background-repeat: repeat;
        }

        &__menu {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
        }

        &__menu-item {
            flex: 1;
            text-align: center;
            position: relative;

            &:not(:last-child)::after {
                content: '';
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 2px;
                height: 70%;
                background: #fff;
            }
        }

        &__menu-link {
            color: white;
            text-decoration: none;
            font-size: 1.6rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem;
            width: 100%;
            transition: color 0.2s ease;

            &:hover {
                color: #dcb434; // ドラクエの金色
                .dq-cursor {
                    opacity: 1;
                    transform: translateX(0);
                }
            }
        }

        &__copyright {
            font-size: 1.4rem;
            text-align: center;
            color: #fff;
            
            .pixel-text {
                display: inline-block;
                transform: translateY(2px);
            }
        }
    }

    // ドラクエ風ウィンドウスタイル
    .dq-window {
        border-top: 4px solid #fff;
        border-bottom: 4px solid #fff;
        position: relative;
        
        &::before,
        &::after {
            content: '';
            position: absolute;
            left: 0;
            width: 100%;
            height: 2px;
            background: #fff;
        }
        
        &::before {
            top: 2px;
        }
        
        &::after {
            bottom: 2px;
        }
    }

    // ドラクエ風カーソル
    .dq-cursor {
        color: #dcb434;
        margin-right: 0.5rem;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.2s ease;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .footer {
            &__menu {
                flex-direction: column;
                gap: 1.5rem;
            }

            &__menu-item {
                width: 100%;
                
                &:not(:last-child)::after {
                    width: 70%;
                    height: 2px;
                    bottom: -0.75rem;
                    left: 50%;
                    top: auto;
                    transform: translateX(-50%);
                }
            }

            &__menu-link {
                font-size: 1.4rem;
            }

            &__copyright {
                font-size: 1.2rem;
            }
        }
    }
</style>