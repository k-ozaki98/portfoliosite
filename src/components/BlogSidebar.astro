        background: #000;
        // border-bottom: 2px solid #eee;
    }

    .category-list {
        li {
            margin-bottom: 1rem;
        }

        .category-link {
            display: block;
            text-decoration: none;
            color: #333;
            padding: 0.5rem;
            transition: background-color 0.3s;

            &:hover {
                background-color: #f5f5f5;
            }
