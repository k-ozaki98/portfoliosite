    }

    .popular-posts {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }


    .sidebar-section {
        

  
    }

    .category-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .category-link {
        text-decoration: none;
        font-size: 1.3rem;
        letter-spacing: 0.05em;
        color: #fff!important;
        border: 1px solid #fff;
        padding: 0 0.75rem;
        color: #fff;
        transition: all 0.3s ease;

        &:hover {
            background-color: #f5f5f5;
        }
    }

    .sidebar-wrap {
    padding: 1rem;
  }
}
