---
import { getCategories, getBlogs } from '../lib/microcms';
const categories = await getCategories();

// 人気記事を取得（例として最新5件を表示）
const { contents: popularPosts } = await getBlogs({ 
    limit: 5,
    orders: '-publishedAt'  // 実際のプロジェクトではPV数などでソート
});
---

<aside class="blog-sidebar">
    <div class="sidebar-about">
        <div class="sidebar-icon">
            <img src="../assets/images/top/profile.jpg" alt="">
        </div>
        <p class="sidebar-name">尾崎 幸喜</p>
        <div class="sidebar-text">
            <p>大阪市のWEB制作会社にてフロントエンドエンジニアとして</p>
        </div>
    </div>

    <!-- 人気記事セクション -->
    <div class="sidebar-section">
        <h3 class="sidebar-title">人気記事</h3>
        <div class="popular-posts">
            {popularPosts.map((post, index) => (
                <a href={`/blog/${post.id}`} class="popular-post">
                    <div class="popular-post__number">{index + 1}</div>
                    <div class="popular-post__content">
                        {post.thumbnail && (
                            <img 
                                src={`${post.thumbnail.url}?w=100`} 
                                alt={post.title}
                                class="popular-post__image"
                            />
                        )}
                        <div class="popular-post__info">
                            <h4 class="popular-post__title">{post.title}</h4>
                            <time class="popular-post__date">
                                {new Date(post.publishedAt).toLocaleDateString('ja-JP')}
                            </time>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </div>

    <!-- カテゴリーセクション -->
    <div class="sidebar-section">
        <h3 class="sidebar-title">カテゴリー</h3>
        <div class="category-list">
            <a href="/blog" class="category-link">
                全ての記事
            </a>
            {categories.map((category) => (
                <a 
                    href={`/blog/${category.slug}`} 
                    class="category-link"
                >
                    {category.name}
                </a>
            ))}
        </div>
    </div>
</aside>

<style lang="scss">
