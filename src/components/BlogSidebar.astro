        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.06);

    }

    .sidebar-name {
        text-align: center;
        font-size: 1.7rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }
    .sidebar-text {
        font-size: 1.4rem;
    }

    .popular-posts {
        display: flex;
        flex-direction: column;
