---
interface Props {
    items: {
        label: string;
        href?: string;
    }[];
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="パンくずリスト">
        <ol>
            <li>
                <a href="/">TOP</a>
            </li>
            {items.map((item, index) => (
                <li>
                    {item.href ? (
                        <a href={item.href}>{item.label}</a>
                    ) : (
                        <span>{item.label}</span>
                    )}
                </li>
            ))}
        </ol>
</nav>

<style lang="scss">
.breadcrumb {
    padding: 1rem 0;
    background: #fff;
    border-bottom: 1px solid #eee;
    margin-bottom: 2rem;
    
    ol {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    
    li {
        display: flex;
        align-items: center;
        color: #666;
        font-size: 1.6rem;
        
        &:not(:last-child)::after {
            content: ">";
            margin-left: 0.5rem;
            color: #ccc;
        }
    }
    
    a {
        color: #333;
        text-decoration: none;
        transition: color 0.2s ease;
        
        &:hover {
            color: #dcb434;
        }
    }
    
    span {
        color: #dcb434;
    }
}

@media (max-width: 768px) {
    .breadcrumb {
        font-size: 0.75rem;
    }
}
</style>